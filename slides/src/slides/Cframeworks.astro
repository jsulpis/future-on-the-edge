---
import Slide from "../components/Slide.astro";

import sveltekit from "../assets/screenshots/screenshot-sveltekit.jpeg";
import frameworks from "../assets/screenshots/screenshot-frameworks.jpeg";
import qwik from "../assets/screenshots/screenshot-qwik.jpeg";
---

<Slide title="Ils en parlent" subtitle="Frameworks JavaScript">
  <div class="pictures">
    <img src={sveltekit} alt="screenshot of sveltekit app on the edge" />
    <img
      class="fragment fade-in"
      src={frameworks}
      alt="screenshot of vercel templates for frameworks on the edge"
    />
    <img
      class="fragment fade-in"
      src={qwik}
      alt="screenshot of Qwik home page"
    />
  </div>
</Slide>

<style lang="scss">
  .pictures {
    position: relative;
    height: 100%;
  }

  img {
    position: absolute;
    inset: 0;
    margin: auto;
    height: 90%;
    box-shadow: var(--shadow-elevation-high);
    border-radius: 8px;

    &:nth-of-type(2) {
      transform: rotate(2deg);
    }

    &:nth-of-type(3) {
      transform: rotate(-1deg);
    }
  }
</style>
