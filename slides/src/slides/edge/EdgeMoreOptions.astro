---
import Slide from "../../components/Slide.astro";
import cacheMeme from "../../assets/illustrations/meme-cache.png"
---

<Slide title="Et si on utilisait..." firstOfGroup>
    <div>
      <h2 class="" data-fragment-index="1">... du cache ?</h2>
      <img
      data-fragment-index="1"
      class="meme"
      src={cacheMeme}
      alt="meme mind blown"
      />
    </div>
</Slide>

<style>
div {
  display: flex;
  flex-direction: column;
  align-items: center;
}

  .meme {
    margin: auto;
    border-radius: 8px;
    height: 90%;
    grid-row: span 2;
  }

  h2 {
    text-align: left;
    font-size: 2rem;
    margin: 0;
  }
</style>
