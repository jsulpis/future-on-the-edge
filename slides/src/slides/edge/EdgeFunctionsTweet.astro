---
import Card from "../../components/Card.astro";
import Slide from "../../components/Slide.astro";
import pooyaTweet from "../../assets/illustrations/tweet_pooya_parsa.png";
---

<Slide
  title="Edge Functions"
  subtitle="Fonctions déployées sur le réseau périphérique">
    <img src={pooyaTweet} alt="Tweet de Kent C. Dodds disant que le futur du web est sur les serveurs" />
  </Slide>
  
  <style>
    img {
      max-width: 95%;
      max-height: 100%;
      justify-self: center;
      border-radius: 24px;
      border-top: 1px solid rgba(255, 255, 255, .3);
      box-shadow: var(--shadow-elevation-high);
    }
  </style>
  