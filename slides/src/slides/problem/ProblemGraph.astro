---
import Card from "../../components/Card.astro";
import Slide from "../../components/Slide.astro";
import LineChart from "../../components/LineChart.svelte";

const apiUsEast = {
  label: "API Washington",
  data: [251, 189, 239, 124, 120, 78, 116, 155, 135, 289],
  color: `hsl(112deg 45% 61%)`,
};

const ssrUsEastapiUsEast = {
  label: "{ SSR + API } Washington",
  borderDash: [15, 15],
  data: [286, 227, 279, 157, 167, 108, 149, 186, 201, 348],
  color: `hsl(${112 + 90}deg 45% 61%)`,
};

const apiTokyo = {
  label: "API Tokyo",
  data: [121, 60, 152, 144, 259, 216, 256, 281, 304, 400],
  color: `hsl(292deg 45% 61%)`,
};

const ssrUsEastapiTokyo = {
  label: "SSR Washington + API Tokyo",
  borderDash: [15, 15],
  data: [450, 361, 420, 342, 462, 292, 305, 341, 391, 550],
  color: `hsl(${292 + 90}deg 45% 61%)`,
};
---

<Slide title="Le problème actuel">
  <Card>
    <LineChart datasets={[apiUsEast]} client:visible />
  </Card>
</Slide>

<Slide title="Le problème actuel" animate={false}>
  <Card>
    <LineChart datasets={[apiUsEast, ssrUsEastapiUsEast]} client:visible />
  </Card>
</Slide>

<Slide title="Le problème actuel">
  <Card>
    <LineChart datasets={[apiTokyo]} client:visible />
  </Card>
</Slide>

<Slide title="Le problème actuel" animate={false}>
  <Card>
    <LineChart datasets={[apiTokyo, ssrUsEastapiTokyo]} client:visible />
  </Card>
</Slide>
