<style lang="scss">
  ul {
    text-align: left;
    font-size: 1.4rem;
    line-height: 2;
    margin: 10px auto 20px 0;
  }

  .content {
    display: flex;
    justify-content: space-around;
    margin-bottom: 50px;
    width: 100%;
  }

  a.twitter {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    font-size: 1.5rem;
    margin-bottom: 1em;
    font-weight: bold;

    img {
      height: 1em;
      filter: brightness(100);
    }
  }

  p {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 2.5rem;
    margin: 0;
  }

  img {
    height: 1em;

    &.vercel {
      filter: invert(1);
    }
  }

  a {
    color: white;
  }
</style>
